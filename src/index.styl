@import url('https://fonts.googleapis.com/css?family=Rubik:300,400,600,700');
@import url('https://fonts.googleapis.com/css?family=PT+Serif:400,700');

body, html
  padding 0
  margin 0
  font-family 'Rubik', sans-serif

.section
  min-height 100vh
  display flex
  flex-direction column
  align-items center
  justify-content center

.section-title
  font-size 4.5em
  margin-bottom 100px

.hr-top
  position relative
  &:before
    content: "";
    display: block;
    width: 100px;
    height: 4px;
    position: absolute;
    top -30px
    left: 50%;
    transform translateX(-50%)
    background-color: #506fd4;
    border-radius: 4px;

.page-landing
  background-image url('./img/landing-bg.jpg')
  background-repeat no-repeat
  background-size cover
  color #fff
  text-align center
  &__text
    width 80%
    h1
      font-size 4em
      margin-bottom 0
      font-weight 700
      text-transform uppercase
      text-align left
    h3
      font-size 2em
      margin 0
      font-weight 400

.action-text
  position relative
  z-index 2
  &:after
    content ""
    position absolute
    display inline-block
    background #1A65E3
    height 34px
    width 100%
    left 13px
    bottom 15px
    z-index -1


.landing-arrow
  width 35px
  background-image url('img/arrow-down.svg')
  background-size 100% 100%
  background-repeat no-repeat
  position absolute
  bottom 50px
  &:after
    content ""
    width 37px
    height 37px
    display block
    border 1px solid #fff
    opacity .3
    border-radius 5px
    transform rotate(45deg)
    position relative
    left -2px
    top -2px

.page-nav  
  position fixed
  top 60px
  left 50%
  z-index 4
  transform translateX(-50%)
  display flex
  width 80%
  justify-content space-between
  text-transform uppercase
  & >li
    list-style none
    padding 0
    a
      color #fff
      text-decoration none  
#logo
  width 160px

.page-menu
  position absolute
  z-index 3
  right -600px
  top 0
  height 100vh
  background-color rgba(0,0,0,0.2)
  width 0
  overflow hidden
  transition .5s
  ul
    position absolute
    top 50%
    transform translateY(-50%)
    text-align right
    right 30%
    overflow hidden
    position relative
    li
      list-style none
      padding 20px 0
      a
        color #fff
        text-decoration none
        font-size 3.5em
        font-weight 700
        text-transform uppercase
        position relative
        &:after
          content ""
          position absolute
          display inline-block
          background #1A65E3
          height 34px
          width 100%
          top 19px
          z-index -1
          opacity 0
          right -200px
          transition .4s all ease
        &:hover:after
          opacity 1
          right 10px


.menu-opened
  width 600px 
  right 0 !important

.page-about
  background-image url('./img/about-bg.jpg')
  background-repeat no-repeat
  background-size cover
  color #fff
  position relative
  flex-direction row
  justify-content flex-start
  padding 0 10% 
  margin 0 auto
  &__text
    margin-right 50px
    max-width 700px
    h2
      font-size 1.4em
    p
      font-size 1.2em
      line-height 1.4em
  &__action
    position absolute
    bottom 300px

.button
  color #fff
  text-decoration none
  text-transform uppercase
  padding 10px 40px
  background-color #1A65E3
  box-shadow 0px 4px 16px 0px #0d2f56
  font-size .8em
  letter-spacing 1px
  font-weight 600
  &:hover
    background-color #5273e3
  &-contact
    margin-top 40px
    font-size 1em
    font-weight 700


.page-services
  background-color #10213D
  color #fff
  position relative
  padding-top 200px
  
.services-title
  font-size 3em
  position absolute
  left 10%
  top 20%
  &:before
    content ""
    height 3px
    width 200px
    display block
    position absolute
    background-color #1a65e3 
    left -210px
    top 25px

.grid-row
  position relative
  display flex
  flex 1
  &.right
    justify-content flex-end
.services-grid
  width 60%
  padding 10% 0
  margin 0 auto
  &__item
    width 500px
    color #fff
    text-decoration none
    &:hover
      .services-grid__image:after
        opacity .4
  &__image
    background-image url('http://www.pypinformatica.com.ar/img/img_2_home.jpg')
    height 300px
    width 500px
    position relative
    box-shadow: 0px 6px 43px -2px #05081A
    &:after
      content ""
      display block
      width 100%
      background-color #1a65e3
      height 100%
      opacity 0
      transition .2s
      
    &:before
      content attr(data-number)
      position absolute
      color #1a65e3
      font-size 6em
      font-weight bold
      top -.6em
      left 10px
      opacity .6
  &__title
    font-size 2em
    margin-bottom 20px
    font-weight 700
    position relative
    top -25px
    left 10px
    font-size 2.5em
    text-shadow: 0px 6px 43px -2px #05081A
    background-color #1a65e3
    display inline-block
    padding 0 10px
    &:after
      content ""
      position absolute
      display inline-block
      background #1A65E3
      height 34px
      width 100%
      top 19px
      z-index -1
      opacity 0
      right -200px
      transition .4s all ease
  &__text
    font-size 1.2em
    position relative
    top -20px
    left 10px

.services-button
  padding 20px
  margin-top 200px
  position relative
  &:before
    content ""
    height 120px
    width 3px
    display block
    position absolute
    background-color #fff
    top -140px
    opacity .4
    left 50%
  a
    left calc(50% - 125px)
    position relative

.page-contact
  background-image url('./img/footer-bg.jpg')
  background-repeat no-repeat
  background-size cover
  background-position  bottom 
  color #fff
  font-weight 300
  position relative
  p
    font-size 1.6em
    margin-bottom 60px
  .contact-link
    color #fff
    font-size 1.8em
    text-decoration none
    margin-bottom 10px
    position relative
    z-index 2
    &:after
      content ""
      position absolute
      display inline-block
      background #1A65E3
      height 34px
      width 100%
      bottom 0
      z-index -1
      opacity 0
      right -200px
      transition .4s all ease
    &:hover:after
      opacity 1
      right 0

.side-nav
  position absolute
  right 10%
  transform rotate(90deg) translateY(-50%)
  top 50%
  z-index 1
  text-transform uppercase
  font-weight 700
  letter-spacing 1px
  white-space nowrap
  &:after
    content attr(data-text)
    position absolute
    right 50%
    top -65px
    transform translateX(50%)
    font-size 8em
    font-weight 700
    opacity .05
    z-index -1
    text-transform uppercase
  &__arrow-down
    content ""
    background-image url('img/side-nav-arrow.svg')
    width 20px
    height 20px
    background-size contain
    display block
    position absolute
    bottom 46%
    right 5%
    transform rotate(-90deg)
  &__arrow-up
    content ""
    background-image url('img/side-nav-arrow.svg')
    width 20px
    height 20px
    background-size contain
    display block
    position absolute
    top 46%
    right 5%
    transform rotate(90deg)

.page-features
  &__wrap
    display flex
    height 100vh
    width 100%
    div
      flex 1
      background red
      border 1px solid blue

